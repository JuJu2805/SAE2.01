<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <!-- Header Section -->
            <HBox fx:id="headerSection" alignment="CENTER" spacing="20">
                <ImageView fx:id="logoImageView" fitHeight="100" fitWidth="100"/>
            </HBox>

            <!-- Description Section -->
            <VBox fx:id="descriptionSection" spacing="10" alignment="CENTER" style="-fx-background-color: #333; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Label fx:id="descriptionTitle" text="DESCRIPTION:" style="-fx-font-size: 20; -fx-text-fill: white;"/>
                <Label fx:id="descriptionContent" text=" " wrapText="true" style="-fx-text-fill: white;"/>
            </VBox>

            <!-- Game Info Section -->
            <VBox fx:id="gameInfoSection" spacing="10" alignment="CENTER" style="-fx-background-color: #333; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Label fx:id="gameInfoTitle" text="A propos du jeu" style="-fx-font-size: 20; -fx-text-fill: white;"/>
                <Label fx:id="gameInfoContent" text=" " wrapText="true" style="-fx-text-fill: white;"/>
            </VBox>

            <!-- Ratings Section -->
            <VBox fx:id="ratingsSection" spacing="10" alignment="CENTER" style="-fx-background-color: #333; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Label fx:id="ratingsTitle" text="AVIS GENERAUX" style="-fx-font-size: 20; -fx-text-fill: white;"/>
                <Label fx:id="ratingsValue" text=" " wrapText="true" style="-fx-text-fill: white;"/>
            </VBox>

            <!-- Requirements Section -->
            <VBox fx:id="requirementsSection" spacing="10" alignment="CENTER" style="-fx-background-color: #333; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Label fx:id="requirementsTitle" text="Configuration requise" style="-fx-font-size: 20; -fx-text-fill: white;"/>
                <VBox fx:id="minimalRequirements" spacing="5">
                    <Label fx:id="minimalTitle" text="Minimale" style="-fx-text-fill: white;"/>
                    <Label fx:id="minimalContent" text=" " wrapText="true" style="-fx-text-fill: white;"/>
                </VBox>
                <VBox fx:id="recommendedRequirements" spacing="5">
                    <Label fx:id="recommendedTitle" text="RecommandÃ©e" style="-fx-text-fill: white;"/>
                    <Label fx:id="recommendedContent" text=" " wrapText="true" style="-fx-text-fill: white;"/>
                </VBox>
            </VBox>

            <!-- Tags Section -->
            <HBox fx:id="tagsSection" spacing="10" alignment="CENTER" style="-fx-background-color: #333; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Label fx:id="tag1" text=" " style="-fx-background-color: #444; -fx-padding: 5 10; -fx-border-radius: 5; -fx-background-radius: 5; -fx-text-fill: white;"/>
                <Label fx:id="tag2" text=" " style="-fx-background-color: #444; -fx-padding: 5 10; -fx-border-radius: 5; -fx-background-radius: 5; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
